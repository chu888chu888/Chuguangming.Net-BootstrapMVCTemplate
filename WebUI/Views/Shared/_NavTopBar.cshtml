@model WebUI.Models.AccountModels.LogOnModel
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">友学网</a>
            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li class="active"><a href="#">首页</a></li>
                    <li><a href="#about">关于我们</a></li>
                    <li><a href="#contact">注册</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">更多 <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">修改密码</a></li>
                            <li><a href="#">忘记密码</a></li>
                            <li><a href="#">联系我们</a></li>
                            <li class="divider"></li>
                            <li><a href="#">购买VIP</a></li>

                        </ul>
                    </li>
                </ul>


                @if (Request.IsAuthenticated)
                {
                    <div class="btn-group pull-right">
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="icon-user"></i>@User.Identity.Name
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("个人信息", "Profile", "Account")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("注销", "LogOff", "Account")</li>
                        </ul>
                    </div>
                }
                else
                {
                    <form class="navbar-form pull-right" action="/account/logon" method="post">
                        @Html.TextBoxFor(m => m.Email, new { style = "", placeholder = "输入绑定邮箱：", @class = "span2" })
                        @Html.PasswordFor(m => m.Password, new { style = "", placeholder = "输入账号密码：", @class = "span2" })
                        <button type="submit" class="btn">登录</button>
                        <div style="float: right; margin-top: 5px">
                            @Html.ValidationSummary(true, "有错误！")
                        </div>
                    </form>
                }

            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>
