@{
    ViewBag.Title = "Logon";
}
@model WebUI.Models.AccountModels.LogOnModel
<style type="text/css">
    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }

        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }

        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }
</style>
<div id="logindiv" style="margin-top: 80px;">
    <form class="form-signin" action="/account/logon" method="post">
        <h2 class="form-signin-heading">请您登录</h2>
        @Html.TextBoxFor(m => m.Email, new { style = "", placeholder = "输入绑定邮箱：", @class = "input-block-level" })
        @Html.PasswordFor(m => m.Password, new { style = "", placeholder = "输入账号密码：", @class = "input-block-level" })


        <label class="checkbox">
            @Html.CheckBoxFor(m => m.RememberMe, new { })
            记住我
        </label>

        <button type="submit" class="btn btn-large btn-primary">登录</button>
    </form>
</div>

