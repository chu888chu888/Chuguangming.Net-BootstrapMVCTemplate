@{
    ViewBag.Title = "Append";
}
@model WebUI.Models.NoteModels.FMNote

<style type="text/css">
    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-signin {
        max-width: 600px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }

        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }

        .form-signin input[type="text"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
            width:200px;
        }
</style>
<div id="logindiv" style="margin-top: 80px;">
    <form class="form-signin" action="/Note/Append" method="post">
        <h2 class="form-signin-heading">请您留言</h2>
        <label>标题</label>
        @Html.TextBoxFor(m => m.PosterTitle, new { style = "", placeholder = "", @class = "input-block-level" })
        @Html.ValidationMessage("Poster")
        <label>请您输入您的意见</label>
        @Html.TextAreaFor(m => m.Content, new { style = "height:350px",placeholder = "", @class = "input-block-level" })
        @Html.ValidationMessage("Content")
        @Html.ValidationMessage("FailedMess")
        <button type="submit" class="btn btn-large btn-primary">提交</button>
    </form>
</div>

